<Page x:Class="WpfApp3.MyPage.AutoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3.MyPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutoPage">

    <Grid>
        <StackPanel   VerticalAlignment="Center" HorizontalAlignment="Center" >
            <TextBlock Text="Логин" Margin="5"></TextBlock>
            <TextBox Style="{StaticResource MeTextBox}" x:Name="LoginTb"></TextBox>
            <TextBlock Text="Пароль"></TextBlock>
            <PasswordBox Style="{StaticResource MeTextBox2}" x:Name="PasswordTb"></PasswordBox>
            <StackPanel Orientation="Horizontal" >
                <Border BorderBrush="Orange" BorderThickness="3"  CornerRadius="5" Margin="10"  >
                    <Button x:Name="RegBtn" Content="Регистрация"  Click="RegBtn_Click" Background="White"></Button>
                </Border>
                <Border BorderBrush="Orange" BorderThickness="3"  CornerRadius="5" Margin="10"  >
                    <Button x:Name="AutoBtn" Content="Вход"  Background="White" Click="AutoBtn_Click" ></Button>
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
    
</Page>
